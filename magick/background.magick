#!/usr/bin/env magick-script
-seed 149
-size 3000x3000 plasma:grey75-grey75
-colorspace Gray
-blur 20x20
-compose src-over
-gravity center
( -size 3000x3000 gradient:none-black
  -channel A
  -fx "(u+(7/12))*(3/9)"
  -rotate 270
) -composite
-brightness-contrast 84%x-60%
-fill red
-tint 5
-rotate 180
-write background.png
